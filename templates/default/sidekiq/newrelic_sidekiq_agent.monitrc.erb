check process newrelic_sidekiq_agent_<%= @app_name %>
with pidfile /var/run/newrelic-sidekiq-plugin-<%= @app_name %>.pid
start program = "<%= @plugin_path %>/newrelic_sidekiq_agent" with timeout 90 seconds
stop program = "/bin/bash -c '/bin/kill `/bin/cat /var/run/newrelic-sidekiq-plugin-<%= @app_name %>.pid`'" with timeout 90 seconds
if totalmem is greater than <%= @memory_limit %> MB for 2 cycles then restart
group newrelic_agent
